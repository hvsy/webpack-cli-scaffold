{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2017","es2015","dom","es6","esnext.array","es5"
    ],
    "rootDir": "src",
    "outDir": "./dist",
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop":true,
    "experimentalDecorators":true,
    "emitDecoratorMetadata":true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["./__tests__/*"]
}